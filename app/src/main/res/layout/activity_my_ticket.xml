<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_a"
    tools:context="com.funguide.cc.movieticket.activity.MyTicketActivity">
    <include
        layout="@layout/layout_header"
        />
    <RelativeLayout
        android:id="@+id/ticket_order_rly"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/ticket_order_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/movies_ic_tab_coupon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@+id/ticket_order_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影票订单"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ticket_coupon_rly"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/ticket_coupon_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/movies_ic_tab_movie"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@+id/ticket_coupon_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影优惠券"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
