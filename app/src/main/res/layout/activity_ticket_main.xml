<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_a"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--banner-->
            <include
                layout="@layout/layout_ticket_adv"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:background="@color/white"
                android:padding="10dp"
                >
                <LinearLayout
                    android:id="@+id/ticket_allfilm_lly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shouye_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="全部影片"
                        android:textColor="@color/black_a"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ticket_allcinema_lly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shouye_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部影院"
                        android:textColor="@color/black_a"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ticket_myticket_lly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shouye_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的影票"
                        android:textColor="@color/black_a"
                        android:padding="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="热门影片"
                    android:textColor="@color/pureBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ticket_hot_film_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="全部"
                    android:drawableRight="@mipmap/icon_more"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <com.funguide.cc.movieticket.views.AllGridView
                android:id="@+id/ticket_hot_film_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="推荐电影"
                    android:textColor="@color/pureBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ticket_recommend_cinema_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="全部"
                    android:textColor="@color/black"
                    android:drawableRight="@mipmap/icon_more"
                    android:textSize="16sp" />

            </RelativeLayout>

            <com.funguide.cc.movieticket.views.AllListView
                android:id="@+id/ticket_recommend_cinema_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>